{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",

    "strict": false,
    "noUncheckedIndexedAccess": true,
    // "exactOptionalPropertyTypes": true,
    "noImplicitAny": false,
    "allowImportingTsExtensions": true,

    "isolatedModules": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["src"]
}
